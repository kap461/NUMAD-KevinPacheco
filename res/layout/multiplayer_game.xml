    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#000000"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:background="#ffffff"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/boggle_word_textView"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/puzzle_foreground" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_weight="1.36" >

        <ScrollView
            android:id="@+id/word_list_textView"
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp" >

            <TextView
                android:id="@+id/boggle_used_words"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:textColor="@color/puzzle_hilite"
                android:textSize="20dp" />
        </ScrollView>
    </RelativeLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@+id/multiplayer_game_clear_word" >

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <Button
                android:id="@+id/multiplayer_game_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="return_button"
                android:text="@string/multiplayer_game_back_label" />

            <Button
                android:id="@+id/multiplayer_game_clear_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="clear_button"
                android:text="@string/multiplayer_game_clear_word_label" />

            <Button
                android:id="@+id/multiplayer_game_submit_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/multiplayer_game_clear_word"
                android:layout_weight="0.33"
                android:onClick="submit_button"
                android:text="@string/multiplayer_game_submit_word_label" />

        </TableRow>
    </TableLayout>

</LinearLayout>