<edu.neu.madcourse.kevinpacheco.butterflycatcher.MapRelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/button_target"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/game_button_custom"
            android:contentDescription="@string/hello_world"
            android:onClick="onTargetButtonClick"
            android:src="@drawable/button_target" />

        <ImageButton
            android:id="@+id/button_birdseye"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/game_button_custom"
            android:contentDescription="@string/hello_world"
            android:onClick="onBirdseyeButtonClick"
            android:src="@drawable/button_birdseye" />

        <ImageButton
            android:id="@+id/button_net"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/game_button_custom"
            android:contentDescription="@string/hello_world"
            android:onClick="onNetButtonClick"
            android:src="@drawable/button_net" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/game_button_custom"
        android:contentDescription="@string/hello_world"
        android:onClick="onInventoryButtonClick"
        android:src="@drawable/button_inventory" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:onClick="onBackButtonClick"
        android:background="@drawable/back_button_custom" />

</RelativeLayout>

</edu.neu.madcourse.kevinpacheco.butterflycatcher.MapRelativeLayout>